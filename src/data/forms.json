  "salesOrder": {
    "title": "Sales Order",
    "description": "Create new sales order",
    "fields": [
      {
        "name": "customerName",
        "type": "select",
        "label": "Customer",
        "required": true,
        "className": "col-span-1",
        "id": "order_customer",
        "options": [
          {"value": "customer1", "label": "ABC Company"},
          {"value": "customer2", "label": "XYZ Corp"},
          {"value": "customer3", "label": "Tech Solutions"}
        ]
      },
      {
        "name": "orderDate",
        "type": "date",
        "label": "Order Date",
        "required": true,
        "className": "col-span-1",
        "id": "order_date"
      },
      {
        "name": "deliveryDate",
        "type": "date",
        "label": "Expected Delivery",
        "required": false,
        "className": "col-span-1",
        "id": "delivery_date"
      },
      {
        "name": "priority",
        "type": "select",
        "label": "Priority",
        "required": true,
        "className": "col-span-1",
        "id": "order_priority",
        "options": [
          {"value": "low", "label": "Low"},
          {"value": "medium", "label": "Medium"},
          {"value": "high", "label": "High"},
          {"value": "urgent", "label": "Urgent"}
        ]
      },
      {
        "name": "notes",
        "type": "textarea",
        "label": "Order Notes",
        "required": false,
        "placeholder": "Additional notes or instructions",
        "className": "col-span-2",
        "id": "order_notes"
      }
    ],
    "submitButtonText": "Create Order",
    "hasItemDetails": true,
    "itemFields": [
      {
        "name": "product",
        "type": "select",
        "label": "Product",
        "required": true,
        "id": "item_product",
        "options": [
          {"value": "prod1", "label": "Product A"},
          {"value": "prod2", "label": "Product B"},
          {"value": "prod3", "label": "Product C"}
        ]
      },
      {
        "name": "quantity",
        "type": "number",
        "label": "Quantity",
        "required": true,
        "id": "item_quantity",
        "validation": {
          "min": 1
        }
      },
      {
        "name": "unitPrice",
        "type": "number",
        "label": "Unit Price",
        "required": true,
        "id": "item_price",
        "validation": {
          "min": 0
        }
      },
      {
        "name": "discount",
        "type": "number",
        "label": "Discount %",
        "required": false,
        "id": "item_discount",
        "validation": {
          "min": 0,
          "max": 100
        }
      }
    ]
  },
